###############################################################################
# VARIABLES                                                                   #
###############################################################################

export EDITOR='vim'

###############################################################################
# ALIASES                                                                     #
###############################################################################

source $HOME/.aliases

###############################################################################
# PATH                                                                        #
###############################################################################

# Add hidden bin directory to path
PATH="$HOME/.bin:$PATH"

# Add go
export GOPATH="$HOME/go"
PATH="$GOPATH/bin:$PATH"

###############################################################################
# TOOLS                                                                       #
###############################################################################

# Add gvm
[[ -s "$HOME/.gvm/bin/gvm-init.sh" ]] && source "$HOME/.gvm/bin/gvm-init.sh"
