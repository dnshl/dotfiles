#-----------------------------------------------------------------------------#
# GIT                                                                         #
#-----------------------------------------------------------------------------#

# Add
alias ga='git add'
alias gap='git add -p'

# Branch
alias   gb='git branch'             # List all Branches
alias  gbm='git branch --merged'    # List all merged Branches
alias gbnm='git branch --no-merged' # List all not merged Branches

# Checkout
alias gco='git checkout'
alias gcom='git checkout master'
alias gcod='git checkout development'
alias gcob='git checkout -b'

# Commit
alias   gc='git commit'
alias  gcm='git commit -m'
alias  gca='git commit --amend'
alias amend='git commit --amend'

# Push
alias  gpo='git push origin'
alias gpom='git push origin master'
alias gpod='git push origin development'

# Diff
alias gd='git diff'
alias gds='git diff --staged'

# Reset
alias grh='git reset --hard'

# Log
alias gl='git log'
alias gls="git log --graph --pretty=format:'%h - %d %s' --abbrev-commit"

# Status
alias gss='git status -s'
alias gs='git status -s'

alias  gpud='git pull upstream development'
alias gprud='git pull --rebase upstream development'
alias gprod='git pull --rebase origin development'

