#-----------------------------------------------------------------------------#
# SHORTCUTS                                                                   #
#-----------------------------------------------------------------------------#
alias - -='cd -'                                    # first dash is intentional
alias ...='cd ../..'
alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'
alias ..6='cd ../../../../../..'

# List direcory contents
alias  ll='ls -l'
alias  la='ls -la'
alias  al='ls -la'

alias ea='$EDITOR ~/.aliases'
alias br='$EDITOR ~/.bashrc'
alias ev='$EDITOR ~/.vimrc'

alias bs='cd - && ls'
alias pu='pushd'
alias po='popd'

alias mkd='mkdir'
alias mkds='mkdir -p'

# Misc
alias serve='python -m SimpleHTTPServer'         # Serves the current directory
alias rwc='find . -type f | xargs wc -l | sort'  # Recursive word count sorted
alias showpath='echo $PATH | tr ":" "\n"' # Show Path

